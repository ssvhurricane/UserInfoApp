@model IEnumerable<UserInfoApp.Model.User>

<h2>Список пользователей</h2>
<p><a asp-action="Create">Добавить пользователя</a></p>
<table class="table">
     <tr><th>Имя</th><th>Отчество</th><th>Фамилия</th><th>Почта</th><th>Телефон</th><th></th><th></th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.PatronymicName</td>
            <td>@item.LastName</td>
            <td>@item.EmailAddress</td>
            <td>@item.PhoneNumber</td> 
            <td>
                <a asp-action="More" asp-controller="Home" asp-route-id="@item.Id">Подробнее</a>
            </td>
             <td> 
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="Home" asp-action="Delete" method="post"  asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>