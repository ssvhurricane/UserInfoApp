@model UserInfoApp.Model.User

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2> Добавление пользователя</h2>

<p><a asp-action="Back">К списку пользователей</a></p>

<form asp-action="create" asp-controller="home">
    <p>
        <label asp-for="LastName">Фамилия</label><br />
        <input type="text" asp-for="LastName" />
    </p>
    <p>
        <label asp-for="FirstName">Имя</label><br />
        <input type="text" asp-for="FirstName" />
    </p>
    <p>
        <label asp-for="PatronymicName">Отчество</label><br />
        <input type="text" asp-for="PatronymicName" />
    </p>
     <p>
        <label asp-for="EmailAddress">Почта</label><br />
        <input type="text" asp-for="EmailAddress" />
    </p>
     <p>
        <label asp-for="PhoneNumber">Телефон</label><br />
        <input type="text" asp-for="PhoneNumber" />
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>