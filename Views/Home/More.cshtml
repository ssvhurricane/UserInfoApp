@model UserInfoApp.Model.User

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2>Подробнее</h2>

<p><a asp-action="Back">К списку пользователей</a></p>

<form asp-action="more" asp-controller="home">

<h3>Основные данные</h3>
<p><label asp-for="LastName">Фамилия - </label>  <input type="text" asp-for="LastName" readonly/></p>
<p><label asp-for="FirstName">Имя - </label> <input type="text" asp-for="FirstName" readonly/></p>
<p><label asp-for="PatronymicName">Отчество - </label> <input type="text" asp-for="PatronymicName" readonly/></p>
<p><label asp-for="EmailAddress">Почта - </label> <input type="text" asp-for="EmailAddress" readonly/></p>
<p><label asp-for="PhoneNumber">Телефон - </label> <input type="text" asp-for="PhoneNumber" readonly/></p>

<h3>Паспортные данные</h3>
<p><label asp-for="Passport.Number">Номер паспорта - </label> <input type="text" asp-for="Passport.Number" readonly/></p>
<p><label asp-for="Passport.DateOfBirth">Дата рождения - </label> <input type="text" asp-for="Passport.DateOfBirth" readonly/></p>
<p><label asp-for="Passport.PlaceOfBirth">Место рождения - </label> <input type="text" asp-for="Passport.PlaceOfBirth" readonly/></p>
<p><label asp-for="Passport.RegistrationAddress">Адрес регистрации - </label> <input type="text" asp-for="Passport.RegistrationAddress" readonly/></p>
<p><label asp-for="Passport. AddressOfResidence">Адрес проживания - </label> <input type="text" asp-for="Passport.AddressOfResidence" readonly/> </p>
</form>
